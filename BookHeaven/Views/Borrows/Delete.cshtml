@model BookHeaven.Models.Borrow

@{
    ViewData["Title"] = "Delete Borrow";
}

<h1>Delete Borrow</h1>

<h3>Are you sure you want to delete this borrow?</h3>
<div>
    <h4>Borrow</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Book ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookId)
        </dd>
        <dt class="col-sm-2">
            Borrow Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BorrowDate)
        </dd>
        <dt class="col-sm-2">
            Due Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" asp-for="BorrowDate" />
        <input type="hidden" asp-for="DueDate" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
