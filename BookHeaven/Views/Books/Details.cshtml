@model BookHeaven.Models.Book
@{
    ViewData["Title"] = "Details - " + Model.Title;
}

<link href="https://fonts.googleapis.com/css2?family=Almendra&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Arial&display=swap&subset=greek" rel="stylesheet">

<div class="container-description">
    <div class="title-bar">
        <h3>@Model.Title</h3>
        <h3>@Model.Author</h3>
    </div>
    <div class="content-container">
        <div class="description-image">
            <img src="@Model.ImageUrl" alt="Cover Image of @Model.Title" onerror="handleImageError(this)">
            <div class="additional-info">
                <p>Author: @ViewData["AuthorName"]</p>
            </div>
            <div class="form-group left-btn">
                <a asp-controller="Borrows" asp-action="Create" asp-route-bookId="@Model.BookId" class="btn btn-primary">Borrow</a>
            </div>
        </div>
        <div class="description-text">
            <div class="content">
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>

<script>
    function handleImageError(image) {
        image.onerror = null; // Prevents an infinite loop if the placeholder image also fails to load
        image.src = 'https://via.placeholder.com/150'; // URL to your placeholder image
    }
</script>